generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String          @id @default(uuid())
  email       String       @unique
  password    String
  resumes     Resume[]
  resumeInfos ResumeInfo[]
  createdAt   DateTime     @default(now())
}

model Resume {
  id        String   @id @default(uuid())
  userId    Int
  title     String // "My Resume for Google"
  content   String // LaTeX or JSON
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model ResumeInfo {
  id        String   @id @default(uuid())
  userId    Int
  name      String
  jobRole   String?
  summary   String?
  email     String?
  phone     String?
  linkedin  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user        User         @relation(fields: [userId], references: [id])
  skills      Skill[]
  projects    Project[]
  experiences Experience[]
  educations  Education[]
}

model Skill {
  id           String    @id @default(uuid())
  resumeInfoId String
  name         String

  resumeInfo ResumeInfo @relation(fields: [resumeInfoId], references: [id])
}

model Project {
  id           Int     @id @default(autoincrement())
  resumeInfoId String
  title        String
  description  String
  technologies String?

  resumeInfo ResumeInfo @relation(fields: [resumeInfoId], references: [id])
}

model Experience {
  id           Int       @id @default(autoincrement())
  resumeInfoId String
  company      String
  role         String
  startDate    DateTime
  endDate      DateTime?
  description  String?

  resumeInfo ResumeInfo @relation(fields: [resumeInfoId], references: [id])
}

model Education {
  id           Int       @id @default(autoincrement())
  resumeInfoId String
  institution  String
  degree       String
  startDate    DateTime
  endDate      DateTime?
  grade        String?

  resumeInfo ResumeInfo @relation(fields: [resumeInfoId], references: [id])
}
